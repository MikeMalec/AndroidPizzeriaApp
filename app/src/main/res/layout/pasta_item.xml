<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPastItem"
    android:layout_width="match_parent"
    android:foreground="@drawable/red_ripple"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPastaName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Makaron"
        android:textColor="@color/gold"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tvPastaSmallPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPastaIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvPastaName"
        app:layout_constraintTop_toBottomOf="@+id/tvPastaName" />

    <TextView
        android:id="@+id/tvPastaBigPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="10"
        android:textColor="@color/gold"
        app:layout_constraintBottom_toBottomOf="@+id/tvPastaName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPastaName" />

    <TextView
        android:id="@+id/tvPastaSmallPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="10"
        android:textColor="@color/gold"
        app:layout_constraintBottom_toBottomOf="@+id/tvPastaBigPrice"
        app:layout_constraintEnd_toStartOf="@+id/tvPastaBigPrice"
        app:layout_constraintTop_toTopOf="@+id/tvPastaBigPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>